{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lifeos.dev/schemas/sense-making-frame.json",
  "title": "SenseMakingFrame",
  "description": "A complete SenseMaking cycle output in LifeOS",
  "type": "object",
  "required": ["id", "version", "createdAt", "triggerSignals", "noticedPatterns", "decision"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this frame"
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "triggerSignals": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Signal"
      },
      "description": "Input signals that triggered this SenseMaking cycle"
    },
    "contextWindow": {
      "$ref": "#/$defs/ContextWindow"
    },
    "noticedPatterns": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Pattern"
      },
      "description": "Patterns detected during NOTICING stage"
    },
    "interpretations": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Frame"
      },
      "description": "Meaning frames from INTERPRETING stage"
    },
    "decision": {
      "$ref": "#/$defs/Decision",
      "description": "Decision from DECIDING stage"
    },
    "proposedAction": {
      "oneOf": [
        { "$ref": "#/$defs/Action" },
        { "type": "null" }
      ]
    },
    "outcome": {
      "oneOf": [
        { "$ref": "#/$defs/Outcome" },
        { "type": "null" }
      ]
    },
    "interpretiveTrace": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/InterpretiveStep"
      },
      "description": "Full trace of interpretive decisions"
    },
    "assumptions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Assumption"
      }
    },
    "confidenceHistory": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      }
    },
    "humanReviewed": {
      "type": "boolean",
      "default": false
    },
    "humanOverride": {
      "type": "boolean",
      "default": false
    },
    "feedbackReceived": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/FeedbackSignal"
      }
    }
  },
  "$defs": {
    "Signal": {
      "type": "object",
      "required": ["id", "type", "source", "normalized", "intensity"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "type": {
          "type": "string",
          "enum": ["linguistic", "temporal", "behavioral", "environmental", "relational"]
        },
        "source": {
          "type": "string"
        },
        "raw": {},
        "normalized": {
          "type": "string"
        },
        "intensity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "ContextWindow": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date-time"
        },
        "end": {
          "type": "string",
          "format": "date-time"
        },
        "scope": {
          "type": "string"
        }
      }
    },
    "Pattern": {
      "type": "object",
      "required": ["id", "type", "salience"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "type": {
          "type": "string",
          "enum": ["recurring", "anomaly", "convergence", "absence", "sequence"]
        },
        "signals": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        "salience": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "novelty": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "urgency": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "Frame": {
      "type": "object",
      "required": ["id", "meaning", "confidence"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "patternId": {
          "type": "string",
          "format": "uuid"
        },
        "meaning": {
          "type": "string",
          "description": "Human-readable interpretation"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "alternatives": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Frame"
          }
        },
        "assumptions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Assumption"
          }
        }
      }
    },
    "Assumption": {
      "type": "object",
      "required": ["id", "description", "source", "challengeable"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "description": {
          "type": "string"
        },
        "source": {
          "type": "string",
          "enum": ["model", "memory", "context", "default"]
        },
        "challengeable": {
          "type": "boolean"
        }
      }
    },
    "Decision": {
      "type": "object",
      "required": ["id", "type", "confidence", "reversible"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "type": {
          "type": "string",
          "enum": ["propose_action", "request_clarification", "defer", "escalate", "do_nothing"]
        },
        "frames": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        },
        "proposedAction": {
          "oneOf": [
            { "$ref": "#/$defs/Action" },
            { "type": "null" }
          ]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "reversible": {
          "type": "boolean"
        },
        "rationale": {
          "type": "string"
        }
      }
    },
    "Action": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "type": {
          "type": "string",
          "enum": ["NAVIGATE", "CREATE", "MODIFY", "DELETE", "COMMUNICATE", "SEARCH", "WAIT"]
        },
        "target": {
          "type": "string"
        },
        "parameters": {
          "type": "object"
        }
      }
    },
    "Outcome": {
      "type": "object",
      "required": ["success"],
      "properties": {
        "success": {
          "type": "boolean"
        },
        "result": {},
        "sideEffects": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "InterpretiveStep": {
      "type": "object",
      "required": ["timestamp", "from", "to", "reason"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "from": {
          "type": "string"
        },
        "to": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        }
      }
    },
    "FeedbackSignal": {
      "type": "object",
      "required": ["type", "source", "feedsBackTo"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["confirmation", "correction", "refinement", "new_information"]
        },
        "source": {
          "type": "string",
          "enum": ["outcome", "user", "system"]
        },
        "value": {},
        "feedsBackTo": {
          "type": "string",
          "enum": ["SCANNING", "NOTICING", "INTERPRETING"]
        }
      }
    }
  }
}
